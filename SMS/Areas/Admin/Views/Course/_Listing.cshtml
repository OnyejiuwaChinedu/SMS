
@model SMS.Areas.Models.CourseListViewModel

@if (Model != null && Model.Course != null && Model.Course.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>

                <th scope="col">Course_Name</th>
                <th scope="col">Course_Description</th>
                <th scope="col">School_Year</th>

            </tr>
        </thead>
        <tbody>
            @if (Model.Course != null)
            {
                foreach (var course in Model.Course)
                {
                    <tr>
                        <td>
                            @course.Course_Name
                        </td>
                        <td>
                            @course.Course_Description
                        </td>
                        <td>
                            @course.School_Year
                        </td>

                        <td>
                            <button data-href="@Url.Action("Action", "Courses", new { Id = course.Id })" type="button" class="data-btn btn btn-success" data-bs-toggle="modal" data-bs-target="#actionModal"><i class="fa-solid fa-pen mr-1"></i>Edit</button>
                            <button data-href="@Url.Action("Delete", "Courses", new { Id = course.Id })" type="button" class="data-btn btn btn-danger" data-bs-toggle="modal" data-bs-target="#actionModal"><i class="fa-solid fa-trash-can mr-1"></i>Delete</button>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        Sorry! No records exist.
    </div>
}



